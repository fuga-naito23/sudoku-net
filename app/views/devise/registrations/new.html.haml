.wrapper
  .container.devise-form
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        -# = f.label :name
        -# %br/
        = fa_icon "user"
        = f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "Name"
      .field
        -# = f.label :email
        -# %br/
        = fa_icon "envelope"
        = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email"
      .field
        -# = f.label :password
        -# - if @minimum_password_length
        -#   %em
        -#     (#{@minimum_password_length} characters minimum)
        %br/
        = fa_icon "key"
        = f.password_field :password, autocomplete: "new-password",placeholder: "Password",placeholder: "Password"
      .field
        -# = f.label :password_confirmation
        -# %br/
        = fa_icon "key"
        = f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Password_confirmation",placeholder: "Password_Confirmation"
      .actions
        = f.submit "Sign up"
    = render "devise/shared/links"
